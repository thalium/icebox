%if TMPL_BITS == 16
BS3_PROC_BEGIN_CMN bs3CpuBasic2_lidt_opsize_bx__sidt32_es_di__lidt_es_si__ud2, BS3_PBC_NEAR
        db      X86_OP_PRF_SIZE_OP
        lidt    [xBX]
        jmp     dword BS3_SEL_R0_CS32:.in_32bit wrt FLAT
        BS3_SET_BITS 32
.in_32bit:
        sidt    [es:edi]
        lidt    [es:esi]
